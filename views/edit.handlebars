<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="text-center">Edit Task</h2>
            <form>
                <div class="btn-group">
                    <div class="dropdown">
                        <div>
                            <label for="editTime">Edit Time:</label>
                            <input type="time" id='editTime' name='editTime'>
                            <label for="editDate">Edit Date</label>
                            <input name='editDate' id='editDate' type='date'></input>
                        </div>
                    </div>

                    <p id="time"></p>
                </div>

                <div class="form-group">
                    <label for="taskDescription">Edit Task Description:</label>
                    <textarea class="form-control" id="updatetaskDescription" rows="3"
                        placeholder="Enter task description"></textarea>
                </div>
                <button type="button" class="btn btn-primary" id="editTask">Update Task</button>
                <a href="#" class="btn btn-secondary ml-2" id="goBack">Go Back</a>
            </form>
        </div>
    </div>

